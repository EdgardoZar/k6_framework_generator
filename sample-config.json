{
  "project": {
    "name": "Local Inventory Tool Performance Tests",
    "version": "1.0.0",
    "description": "Performance tests for a local inventory management tool"
  },
  "application": {
    "baseUrl": "http://127.0.0.1:5000",
    "timeout": 30000,
    "environments": {
      "dev": "http://127.0.0.1:5000",
      "staging": "http://staging.inventory-tool.com",
      "prod": "http://inventory-tool.com"
    }
  },
  "testScenarios": [
    {
      "name": "user_authentication_flow",
      "description": "Tests the user login, profile view, and logout process",
      "weight": 30,
      "businessOps": ["login_api", "get_profile_api", "logout_api"]
    },
    {
      "name": "tool_management_workflow",
      "description": "Tests creating, editing, and deleting tools",
      "weight": 40,
      "businessOps": ["create_tool_api", "edit_tool_api", "delete_tool_api"]
    },
    {
      "name": "inventory_browsing",
      "description": "Tests browsing tool pages and viewing dashboard stats",
      "weight": 30,
      "businessOps": ["get_tool_pages_api", "get_dashboard_stats_api"]
    }
  ],
  "apiEndpoints": [
    {
      "name": "login_api",
      "method": "POST",
      "path": "/auth/login",
      "headers": {
        "Content-Type": "application/json"
      },
      "body": {
        "username": "{username}",
        "password": "{password}"
      },
      "assertions": {
        "status": 200,
        "responseTime": 500,
        "jsonFields": {
          "token": "exists",
          "user_id": "exists"
        }
      }
    },
    {
      "name": "get_profile_api",
      "method": "GET",
      "path": "/auth/profile",
      "headers": {
        "Authorization": "Bearer {token}"
      },
      "assertions": {
        "status": 200,
        "responseTime": 300,
        "jsonFields": {
          "username": "exists",
          "email": "exists"
        }
      }
    },
    {
      "name": "logout_api",
      "method": "POST",
      "path": "/auth/logout",
      "headers": {
        "Authorization": "Bearer {token}"
      },
      "assertions": {
        "status": 200,
        "responseTime": 300
      }
    },
    {
      "name": "get_tool_pages_api",
      "method": "GET",
      "path": "/api/tools?page={page}&limit={limit}",
      "headers": {
        "Authorization": "Bearer {token}"
      },
      "assertions": {
        "status": 200,
        "responseTime": 500,
        "jsonFields": {
          "tools": "exists",
          "total": "exists"
        }
      }
    },
    {
      "name": "create_tool_api",
      "method": "POST",
      "path": "/api/tools",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {token}"
      },
      "body": {
        "name": "{tool_name}",
        "category": "{tool_category}",
        "quantity": "{tool_quantity}"
      },
      "assertions": {
        "status": 201,
        "responseTime": 600,
        "jsonFields": {
          "id": "exists",
          "name": "exists"
        }
      }
    },
    {
      "name": "edit_tool_api",
      "method": "PUT",
      "path": "/api/tools/{tool_id}",
      "headers": {
        "Content-Type": "application/json",
        "Authorization": "Bearer {token}"
      },
      "body": {
        "name": "{updated_tool_name}",
        "category": "{updated_tool_category}",
        "quantity": "{updated_tool_quantity}"
      },
      "assertions": {
        "status": 200,
        "responseTime": 500,
        "jsonFields": {
          "id": "exists",
          "name": "exists"
        }
      }
    },
    {
      "name": "delete_tool_api",
      "method": "DELETE",
      "path": "/api/tools/{tool_id}",
      "headers": {
        "Authorization": "Bearer {token}"
      },
      "assertions": {
        "status": 204,
        "responseTime": 400
      }
    },
    {
      "name": "get_dashboard_stats_api",
      "method": "GET",
      "path": "/dashboard/api/stats",
      "headers": {
        "Authorization": "Bearer {token}"
      },
      "assertions": {
        "status": 200,
        "responseTime": 600,
        "jsonFields": {
          "total_tools": "exists",
          "low_stock_items": "exists"
        }
      }
    }
  ],
  "testData": {
    "user_ids": ["1", "2", "3", "4", "5"],
    "usernames": ["john_doe", "jane_smith", "bob_builder", "alice_mechanic", "charlie_carpenter"],
    "passwords": ["securePass1", "toolMaster2", "inventoryPro3", "fixItAll4", "buildItUp5"],
    "tool_ids": ["101", "102", "103", "104", "105"],
    "tool_names": ["Hammer", "Screwdriver", "Wrench", "Drill", "Saw"],
    "tool_categories": ["Hand Tools", "Power Tools", "Measuring Tools", "Cutting Tools", "Fastening Tools"],
    "tool_quantities": ["10", "15", "8", "12", "6"]
  },
  "testTypes": {
    "smoke": {
      "vus": 5,
      "duration": "30s"
    },
    "load": {
      "vus": 50,
      "duration": "5m"
    },
    "stress": {
      "vus": 200,
      "duration": "10m"
    }
  },
  "framework": {
    "logLevel": "INFO",
    "htmlReporting": true,
    "defaultScenario": 1
  }
}
